---
import SignLayout from "../layouts/SignLayout.astro";
---

<SignLayout title="Бүртгүүлэх">
    <div class="container">
        <div class="form-box">
            <h2>Бүртгүүлэх</h2>
            <p>Бүртгэл үүсгэхийн тулд мэдээллээ оруулна уу</p>
            <form action="/api/auth/register" method="POST">
                <div class="form-group">
                    <label>Нэвтрэх нэр</label>
                    <input
                        type="text"
                        name="username"
                        id="username-register"
                        type="text"
                        placeholder="Нэр"
                        autocomplete="off"
                        required
                    />
                </div>
                <div class="form-group">
                    <label>Имэйл</label>
                    <input
                        name="email"
                        type="text"
                        id="email-register"
                        name="email"
                        type="text"
                        placeholder="example@gmail.com"
                        autocomplete="off"
                        required
                    />
                </div>
                <div class="form-group">
                    <label>Нууц үг</label>
                    <input
                        type="password"
                        name="password"
                        id="password-register"
                        placeholder="Нууц үг"
                        required
                    />
                </div>
                <button type="submit">Бүртгэл үүсгэх</button>
            </form>
            <div class="extra">
                Бүртгэлтэй юу? <a href="/login">Нэвтрэх</a>
            </div>
        </div>
        <div class="side-box">
            <h1>
                <span>C</span>
                <span>A</span>
                <span>N</span>
                <span>E</span>
                <span>Y</span>
            </h1>
            <h1>
                <span>S</span>
                <span>c</span>
                <span>r</span>
                <span>i</span>
                <span>p</span>
                <span>t</span>
            </h1>
        </div>
    </div>
</SignLayout>
